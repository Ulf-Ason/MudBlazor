@namespace MudBlazor.Docs.Examples
<MudChipSet @bind-SelectedChips="selected" MultiSelection="true" Filter="filter" TriStateSelection="@tristateselection">
    <MudChip Text="Milk"></MudChip>
    <MudChip Text="Eggs"></MudChip>
    <MudChip Text="Soap"></MudChip>
    <MudChip Text="Cornflakes"></MudChip>
    <MudChip Text="Salad"></MudChip>
    <MudChip Text="Apples"></MudChip>
    <MudChip Text="Red wine"></MudChip>
</MudChipSet>


@if (selected != null && selected.Length>0)
{
    <MudText>You selected @string.Join(", ", selected.Select(chip=>!chip.IsCrossChecked?chip.Text : $"not {chip.Text}")).</MudText>
}
else
{
    <MudText>Nothing selected.</MudText>
}
<MudCheckBox @bind-Checked="filter">Filter</MudCheckBox>
<MudCheckBox @bind-Checked="tristateselection">TriState selection</MudCheckBox>

@code
{
    bool filter = true;
    bool tristateselection = false;

    MudChip[] selected;
}

